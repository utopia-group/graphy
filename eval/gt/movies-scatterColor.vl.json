{
		"$schema": "https://vega.github.io/schema/vega-lite/v3.json",
		"data": {
			"url": "datasets/movies.csv"
		},
		"mark": {
			"type": "point",
			"filled": true,
			"opacity": 0.8,
			"tooltip": null
		},
		"encoding": {
			"x": {
				"field": "Production_Budget",
				"type": "quantitative"
			},
			"y": {
				"field": "Worldwide_Gross",
				"type": "quantitative",
				"axis": {
					"format": "~s"
				}
			},
			"color": {
				"field": "Major_Genre",
				"type": "nominal"
			}
		},
		"ignore_orientation": true
	}